<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:paddingLeft="20sp"
        android:paddingTop="5sp"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100sp"
            android:layout_weight="5"

            android:orientation="vertical">

            <TextView
                android:id="@+id/TVtitreQCMEtud"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Titre de qcm"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TVnPasser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="passer * fois " />

                <TextView
                    android:id="@+id/TVnote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Note : **" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/TVcodeQCMEtud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:text="Code Pass : ** " />
                <TextView
                    android:id="@+id/TVidProfetudspace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:text="code Prof **" />

            </LinearLayout>


        </LinearLayout>




        <ImageButton
            android:id="@+id/BpasserQCM"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:src="@drawable/edit"


            />



    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>