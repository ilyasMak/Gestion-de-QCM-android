<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/backstud"
    tools:context=".PasserQCM">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:background="@drawable/custom_edittext">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Question 1"
                android:id="@+id/TVtitrePass"
                android:textSize="36sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/purple"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/ETqstpass"
                android:background="@drawable/custom_edittext"
                android:drawablePadding="8dp"
                android:hint="write question"
                android:padding="8dp"
                android:lines="5"
                android:gravity="center"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                />
            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/CBA"
                android:background="@drawable/custom_edittext"
                android:drawablePadding="8dp"
                android:text="Choix A"

                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="20dp"/>
            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/CBB"
                android:background="@drawable/custom_edittext"
                android:drawablePadding="8dp"
                android:text="Choix B"

                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="20dp"/>
            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/CBC"
                android:background="@drawable/custom_edittext"
                android:drawablePadding="8dp"
                android:text="Choix C"

                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="20dp"/>
            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/CBD"
                android:background="@drawable/custom_edittext"
                android:drawablePadding="8dp"
                android:text="Choix D"

                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="20dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/BNextpass"
                android:text="Next"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/purple"
                app:cornerRadius = "20dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>